<div class="container">
  <h2>Users</h2>
  <% if (!usersList.length) { %>
  <p>No results</p>
  <% } else { %>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% usersList.forEach((user) => { %>
      <tr>
        <td><%- user.firstName %></td>
        <td><%- user.lastName %></td>
        <td><button onclick="window.location.href='<%= viewUserPath(user) %>'">View profile</button></td>
        <td><button onclick="window.location.href='<%= editUserPath(user) %>'">Edit</button></td>
        <td>
          <form action="<%= deleteUserPath(user) %>" method="POST">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete">
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } %>
  <button onclick="window.location.href='<%= newUserPath %>'">New User</button>
</div>