<h2>Users</h2>
<% if (!usersList.length) { %>
<p>No results</p>
<% } else { %>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
  </thead>
  <tbody>
    <% usersList.forEach((user) => { %>
    <tr>
      <td><%- user.firstName %></td>
      <td><%- user.lastName %></td>
      <td>
      <td><a href="<%= viewUserPath(user) %>">View profile</a></td>
      <td> |</td>
      <td><a href="<%= editUserPath(user) %>">Edit</a></td>
      <td> | </td>
      <td>
        <form action="<%= deleteUserPath(user) %>" method="POST">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete">
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<% } %>