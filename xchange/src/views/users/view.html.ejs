<div class="container">
        <h1>Perfil</h1>
        <h2><%- user.firstName %> <%- user.lastName %></h2>
        
        <p>Acá irá información del usuario</p>
        
        <button onclick="window.location.href='<%= editUserPath(user) %>'">Edit</button>
        
        <form action="<%= deleteUserPath(user) %>" method="POST">
            <input type="hidden" name="_method" value="delete" />
            <input type="submit" value="Delete" />
        </form>
        
        <%- include('../reviews/index') %>
        <%- include('../reviews/_form') %>
</div>
